<Window x:Class="Lab02_03.ResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Results" Width="350" Height="300">
    <Grid Background="LightGray" Margin="20">
        <Border CornerRadius="8" Padding="12" Background="White">
            <StackPanel>
                <TextBlock Text="Calculation Results:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>